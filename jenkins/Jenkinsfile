pipeline {
    agent any

    tools {
        maven 'Maven 3.9.10'
    }

    options {
        skipStagesAfterUnstable()
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Gautamdev20/simple-java-maven-app.git'
            }
        }

        stage('Check Maven Version') {
            steps {
                sh 'mvn -v'
            }
        }

        stage('Build') {
            steps {
                dir('simple-java-maven-app') {
                    sh 'mvn -B -DskipTests clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('simple-java-maven-app') {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit 'simple-java-maven-app/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Deliver') {
            steps {
                dir('simple-java-maven-app') {
                    sh './jenkins/scripts/deliver.sh'
                }
            }
        }
    }
}
