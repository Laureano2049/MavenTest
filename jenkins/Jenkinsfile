pipeline {
    agent any

    stages {
        // Stage 1: Checkout Code
        stage('Checkout') {
            steps {
                git 'https://github.com/jenkins-docs/simple-java-maven-app.git'
            }
        }

        // Stage 2: Build the Project
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        // Stage 3: Run Unit Tests
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        // Stage 4: Simulate Deployment
        stage('Deploy') {
            steps {
                sh 'mkdir -p /tmp/deploy'
                sh 'cp target/my-app-1.0-SNAPSHOT.jar /tmp/deploy/'
                echo 'Application deployed to /tmp/deploy/'
            }
        }
    }

    // Post-build actions
    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
 
